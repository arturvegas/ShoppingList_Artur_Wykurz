<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingListArturWykurz.Views"
    x:Class="ShoppingListArturWykurz.Views.CategoryView"
    Padding="0"
    HorizontalOptions="FillAndExpand">

    <Border Margin="10" Padding="15" Stroke="#7FB7BE" StrokeThickness="1" BackgroundColor="#4B8D95">
        <StackLayout Spacing="10" HorizontalOptions="FillAndExpand">

            <!-- Header kategorii z przyciskiem do rozwiniÄ™cia -->
            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8" HorizontalOptions="FillAndExpand">
  
                <!-- Przycisk do rozwiniÄ™cia kategorii -->
                <Button 
                    x:Name="ExpandButton"
                    Grid.Column="0"
                    Text="â–¶"
                    WidthRequest="40"
                    HeightRequest="40"
                    BackgroundColor="White"
                    CornerRadius="5"
                    Clicked="OnExpandClicked"
                    Padding="0"
                    FontSize="14" 
                    TextColor="Black" />

                <!-- Nazwa kategorii -->
                <Label 
                    x:Name="CategoryNameLabel"
                    Grid.Column="1"
                    FontSize="18"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    TextColor="White" />

                <!-- Przycisk do dodania produktu -->
                <Button 
                    Grid.Column="2"
                    Text="âž•"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#6AABB4"
                    TextColor="White"
                    CornerRadius="5"
                    Clicked="OnAddProductClicked"
                    FontSize="16" />

                <!-- Przycisk do usuniÄ™cia kategorii -->
                <Button 
                    Grid.Column="3"
                    x:Name="DeleteCategoryButton"
                    Text="ðŸ—‘"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#6AABB4"
                    TextColor="White"
                    CornerRadius="5"
                    Clicked="OnDeleteCategoryClicked"
                    FontSize="16" />
       
            </Grid>

            <!-- Lista produktÃ³w -->
            <VerticalStackLayout 
                x:Name="ProductsContainer"
                IsVisible="False"
                Spacing="5"
                Padding="0"
                HorizontalOptions="FillAndExpand" />
      
        </StackLayout>
    </Border>
    
</ContentView>