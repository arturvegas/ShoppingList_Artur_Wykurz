<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingListArturWykurz.Views"
    x:Class="ShoppingListArturWykurz.Views.CategoryView"
    Padding="0"
    HorizontalOptions="FillAndExpand">

    <Border Margin="10" Padding="15" Stroke="#7FB7BE" StrokeThickness="1" BackgroundColor="#4B8D95">
        <StackLayout Spacing="10" HorizontalOptions="FillAndExpand">

            <StackLayout Orientation="Horizontal" Spacing="8" HorizontalOptions="FillAndExpand">
  
                <Button 
                    x:Name="ExpandButton"
                    Text="â–¶"
                    WidthRequest="40"
                    HeightRequest="40"
                    BackgroundColor="White"
                    CornerRadius="5"
                    Clicked="OnExpandClicked"
                    Padding="0"
                    FontSize="14" 
                    TextColor="Black" />

                <Label 
                    x:Name="CategoryNameLabel"
                    FontSize="18"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    TextColor="White"
                    HorizontalOptions="Start" />

                <Label HorizontalOptions="FillAndExpand" />

                <Button 
                    Text="âž•"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#6AABB4"
                    TextColor="White"
                    CornerRadius="5"
                    Clicked="OnAddProductClicked"
                    FontSize="16" />

                <Button 
                    x:Name="DeleteCategoryButton"
                    Text="ðŸ—‘"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#6AABB4"
                    TextColor="White"
                    CornerRadius="5"
                    Clicked="OnDeleteCategoryClicked"
                    FontSize="16" />
       
            </StackLayout>

            <VerticalStackLayout 
                x:Name="ProductsContainer"
                IsVisible="False"
                Spacing="5"
                Padding="0"
                HorizontalOptions="FillAndExpand" />
      
        </StackLayout>
    </Border>
    
</ContentView>