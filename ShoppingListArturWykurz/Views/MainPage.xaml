<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingListArturWykurz.Views"
    x:Class="ShoppingListArturWykurz.Views.MainPage"
    Title="Lista zakupów"
    Padding="0"
    BackgroundColor="#7FB7BE">

    <StackLayout Spacing="0">

        <Label
            Text="LISTA ZAKUPÓW"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="White"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Padding="0,15"
            BackgroundColor="#7FB7BE" />

        <ScrollView BackgroundColor="#D3F3EE" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <VerticalStackLayout 
                x:Name="CategoriesContainer"
                Padding="10"
                Spacing="10" />
        </ScrollView>

        <StackLayout 
            Orientation="Horizontal"
            Padding="10"
            Spacing="5"
            BackgroundColor="#7FB7BE">

            <Button 
                x:Name="AddCategoryButton"
                Text="➕ Kategoria"
                WidthRequest="150"
                HeightRequest="50"
                BackgroundColor="#7D1538"
                TextColor="White"
                CornerRadius="10"
                Clicked="OnAddCategoryClicked"
                FontSize="14" />
            
        </StackLayout>
        
    </StackLayout>
    
</ContentPage>