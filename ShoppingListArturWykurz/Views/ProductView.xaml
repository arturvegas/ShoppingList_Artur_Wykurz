<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShoppingListArturWykurz.Views.ProductView"
    Padding="0"
    Margin="0"
    HorizontalOptions="FillAndExpand">

    <Border Margin="5" Padding="10" Stroke="#d0d0d0" StrokeThickness="1" BackgroundColor="White">
        <HorizontalStackLayout Spacing="8" HorizontalOptions="FillAndExpand">

            <StackLayout VerticalOptions="Center" Spacing="3" HorizontalOptions="FillAndExpand">

                <Label 
                    x:Name="NameLabel" 
                    FontSize="16" 
                    FontAttributes="Bold"
                    TextColor="Black" />

                <Label 
                    x:Name="UnitLabel" 
                    FontSize="12" 
                    TextColor="#888888" />

            </StackLayout>
            
            <Button 
                Text="âˆ’"
                WidthRequest="40"
                HeightRequest="40"
                CornerRadius="20"
                BackgroundColor="#f0f0f0"
                TextColor="Black"
                FontSize="20"
                Clicked="OnDecreaseClicked"
                Padding="0"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label 
                x:Name="QuantityLabel"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                FontSize="16"
                FontAttributes="Bold"
                WidthRequest="40"
                HorizontalTextAlignment="Center"
                TextColor="#333333" />

            <Button 
                Text="+"
                WidthRequest="40"
                HeightRequest="40"
                CornerRadius="20"
                BackgroundColor="#f0f0f0"
                TextColor="Black"
                FontSize="20"
                Clicked="OnIncreaseClicked"
                Padding="0"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Button 
                x:Name="DeleteButton"
                Text="ðŸ—‘"
                WidthRequest="50"
                HeightRequest="50"
                BackgroundColor="#f0f0f0"
                TextColor="White"
                Clicked="OnDeleteClicked"
                CornerRadius="5"
                FontSize="16" />

        </HorizontalStackLayout>
    </Border>
    
</ContentView>